@using BookStore.Models
@model List<DonHang>
@{
    ViewBag.Title = "Xác Nhận Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="@Url.Action("XacNhan","QuanLyDonHang")">Xác nhận</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("DangGiao","QuanLyDonHang")">Đang Giao</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("DaGiao","QuanLyDonHang")">Đã Giao</a>
    </li>
    <li class="nav-item">
        <a class="nav-link disabled" href="@Url.Action("DaHuy","QuanLyDonHang")" tabindex="-1" aria-disabled="true">Đã Hủy</a>
    </li>
</ul>
<h4 style="text-align:center">Danh sách sản phẩm chờ xác nhận</h4> <br />
<table class="table">
    <tr>
        <th>Tên Khách Hàng</th>
        <th>Mã Đơn Hàng</th>
        <th>Ngày Đặt</th>
        <th>Ngày Giao</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.KhachHang.HoTen</td>
            <td>@item.MaDonHang</td>
            <td>@item.NgayDat</td>
            <td>@item.NgayGiao</td>
            <td>
                @Html.ActionLink("Duyệt (Đang Giao) ", "XacNhanDangGiao", "QuanLyDonHang", new { id = item.MaDonHang }, null) |
                @Html.ActionLink(" Hủy đơn hàng ", "XacNhanHuyDon", "QuanLyDonHang", new { id = item.MaDonHang }, null) |
                @Html.ActionLink(" Chi Tiết", "XemChiTietDonHang", "QuanLyDonHang", new { id = item.MaDonHang }, null)
            </td>
        </tr>
    }

</table>
