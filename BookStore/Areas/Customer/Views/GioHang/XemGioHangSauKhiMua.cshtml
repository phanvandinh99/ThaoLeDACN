@using BookStore.Models
@model IEnumerable<DonHang>
@{
    ViewBag.Title = "Xem Giỏ Hàng Sau Khi Mua";
    Layout = "~/Areas/Customer/Views/Shared/_LayoutCustomer.cshtml";
}
<head>
    <style type="text/css">

        table, th, td {
            border: 1px solid #000000; /*Màu đường viền*/
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        tr th {
            text-align: center;
        }

        th, td {
            text-align: left;
            padding: 10px;
        }

        table tr:nth-child(odd) {
            background-color: #eee;
        }

        table tr:nth-child(even) {
            background-color: white;
        }

        table tr:nth-child(1) {
            background-color: #85CE36; /*Màu hàng tiêu đề tr*/
        }
        /*đoạn css*/
        .pagination {
            list-style: none;
            display: inline-block;
            padding: 0;
            margin-top: 10px;
        }

            .pagination li {
                display: inline;
                text-align: center;
            }

            .pagination a {
                float: left;
                display: block;
                font-size: 14px;
                text-decoration: none;
                padding: 5px 12px;
                color: #85CE36;
                margin-left: -1px;
                border: 1px solid transparent;
                line-height: 1.5;
            }

                .pagination a.active {
                    cursor: default;
                }

                .pagination a:active {
                    outline: none;
                }
    </style>
</head>
<body>


    <h4 style="text-align:center">Danh Sách Đơn Hàng Của Bạn</h4>
    <br />
    <table class="table">
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Ngày Đặt</th>
            <th>Ngày Giao</th>
            <th>Tình Trạng
            <th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaDonHang</td>
                <td>@item.NgayDat</td>
                <td>@item.NgayGiao</td>
                @switch (item.TinhTrangGiaoHang)
                {
                    case 0:
                        <td>Đang xác nhận đơn hàng</td>
                        ; break;
                    case 1:
                        <td>Đang Giao</td>
                        ; break;
                    case 2:
                        <td>Đã Giao</td>
                        ; break;
                    case 3:
                        <td><b style="color:red">Đã Hủy</b></td>
                        ; break;
                }

                <td>
                    @Html.ActionLink(" Chi Tiết", "XemChiTietDonHangDaMua", "GioHang", new { id = item.MaDonHang }, null)
                </td>
            </tr>
        }

    </table>

</body>