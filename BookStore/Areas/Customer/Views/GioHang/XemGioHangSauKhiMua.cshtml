@using BookStore.Models
@model IEnumerable<DonHang>
@{
    ViewBag.Title = "Xem Giỏ Hàng Sau Khi Mua";
    Layout = "~/Areas/Customer/Views/Shared/_LayoutCustomer.cshtml";
}

<h4 style="text-align:center">Danh Sách Đơn Hàng Của Bạn</h4>
<br />
<table class="table" style="border-collapse: collapse;">
    <tr>
        <th>Mã Đơn Hàng</th>
        <th>Ngày Đặt</th>
        <th>Ngày Giao</th>
        <th>Tình Trạng
        <th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MaDonHang</td>
            <td>@item.NgayDat</td>
            <td>@item.NgayGiao</td>
            @switch (item.TinhTrangGiaoHang)
            {
                case 0:
                    <td>Đang xác nhận đơn hàng</td>
                    ; break;
                case 1:
                    <td>Đang Giao</td>
                    ; break;
                case 2:
                    <td>Đã Giao</td>
                    ; break;
                case 3:
                    <td><b style="color:red">Đã Hủy</b></td>
                    ; break;
            }

            <td>
                @Html.ActionLink(" Chi Tiết", "XemChiTietDonHangDaMua", "GioHang", new { id = item.MaDonHang }, null)
            </td>
        </tr>
    }

</table>

