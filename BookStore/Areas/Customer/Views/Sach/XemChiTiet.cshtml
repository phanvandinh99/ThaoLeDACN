@using BookStore.Models;
@model Sach
@{
    ViewBag.Title = "Xem Chi Tiết";
    Layout = "~/Areas/Customer/Views/Shared/_LayoutCustomer.cshtml";
}
@*css trang xemchitiet*@
<style>
    /*Ẩn div body*/
    #divNoiDungBenPhai {
        display: none;
    }

    /*Ẩn slider (Ghi chú: Thẻ section bên trang NguoiDungLayOut.cshtml )*/
    #divMenuSlider {
        display: none;
    }
    #HinhAnh{
        display:block;
    }
</style>
@section NoiDungBenPhai{
    @*Thông tin sách chi tiết*@
    @*Hình ảnh*@
    <div id="HinhAnh"> 
        <img src="@Url.Content("~/Assets/HinhAnhSP/"+ Model.AnhBia)" width="100" height="150"/>
    </div>
    @*Thông tin*@
    <div id="ThongTin">
        <div id="TenSach">@Model.TenSach</div>
        <div id="ChuDe">Chủ đề: @ViewBag.TenChuDe</div>
        <div id="NhaXuatBan">Nhà xuất bản: @ViewBag.NhaXuatBan</div>
        <div id="Mota">Nội dung tóm tắt:<br />- @Model.MoTa <br /></div>
        @*Dịch dấu chấm động đơn giá sử dụng string.Format("{0:0,0}", tham số)*@
        <div id="Gia"><span style="color: green; font-weight: normal;">Đơn giá:</span><br /><span id="Gia"> @string.Format("{0:0,0}", @Model.GiaBan) VNĐ</span></div>
        <br />
        @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = Model.MaSach, @strURL = Request.Url.ToString() }))
        {
            <input type="submit" style="cursor:pointer" value="Đặt hàng" id="btnGioHang" class="btn btn-primary">
        }
    </div>
    <div style="clear:both"></div>
}

@*Css Thông tin sách*@
<style>
    #HinhAnh {
        float: left;

    }

    #ThongTin {
        float: left;
        margin-left: 20px;
        width: 600px;
    }

    #TenSach {
        font-weight: normal;
        font-size: 20pt;
        height: auto;
        word-wrap: break-word; /*Canh nội dung tự xuống dòng */
        color: red;
    }

    #ChuDe, #NhaXuatBan {
        font-size: 15pt;
        font-weight: normal;
        color: black;
        height: auto;
    }

    #Mota {
        font-weight: normal;
        color: black;
        word-wrap: break-word;
        height: auto;
    }

    #Gia span#Gia {
        font-weight: normal;
        color: orange;
        font-size: 25pt;
        height: auto;
    }

    #btnGioHang {
        font-family: 'FontAwesome','Segoe UI';

    }

        #btnGioHang:hover {
            background-color: #808080;
        }
</style>

